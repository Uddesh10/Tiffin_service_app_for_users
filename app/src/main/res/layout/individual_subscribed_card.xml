<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:stateListAnimator="@animator/lift_on_touch_card"
    android:clickable="true"
    android:focusable="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/service_logo_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:paddingTop="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_provider_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"/>
        
        <TextView
            android:id="@+id/service_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/service_active_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorSuccess"
            android:drawableEnd="@drawable/ic_active"
            android:text="@string/active"
            android:gravity="center"
            android:layout_gravity="end"
            android:paddingEnd="14dp"
            android:paddingStart="0dp"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:fontFamily="@font/roboto_bold"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/service_not_active_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorDanger"
            android:drawableEnd="@drawable/ic_not_active"
            android:text="@string/not_active"
            android:gravity="center"
            android:layout_gravity="end"
            android:paddingEnd="14dp"
            android:paddingStart="0dp"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>