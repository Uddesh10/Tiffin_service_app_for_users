        android:fontFamily="@font/roboto_medium"
        android:text="@string/don_t_have_account"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
