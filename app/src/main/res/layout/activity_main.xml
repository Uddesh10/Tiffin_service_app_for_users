            app:layout_constraintStart_toEndOf="@+id/otp_edittext4"
            app:layout_constraintTop_toBottomOf="@+id/otp_mobile_textview"
            android:alpha="0"
            android:visibility="gone"
    />
    <EditText
            android:id="@+id/otp_edittext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_otp_text"
            android:ems="2"
            android:fontFamily="@font/roboto_bold"
            android:inputType="phone"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/otp_edittext6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otp_edittext3"
            app:layout_constraintTop_toBottomOf="@+id/otp_mobile_textview"
            android:alpha="0"
            android:visibility="gone"
    />
    <EditText
            android:id="@+id/otp_edittext6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_otp_text"
            android:ems="2"
            android:fontFamily="@font/roboto_bold"
            android:inputType="phone"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
