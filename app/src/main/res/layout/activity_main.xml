        android:layout_marginBottom="46dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/login"
        android:textColor="@color/colorClickableText"
        android:textSize="16sp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sign_up_form_already_have_account_textview" />

    <EditText
        android:id="@+id/login_form_username_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:autofillHints="Username"
        android:backgroundTint="@color/colorPrimary"
        android:drawableStart="@drawable/ic_user_name"
        android:drawablePadding="10dp"
        android:ems="12"
        android:fontFamily="@font/roboto_bold"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorClickableText"
        android:textSize="18sp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_text_view"
        />

    <Button
        android:id="@+id/login_form_login_button"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:visibility="gone"
